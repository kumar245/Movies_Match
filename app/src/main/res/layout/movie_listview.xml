<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movie_listview_layout"
    >
    <com.mac.fireflies.wgt.moviematch.HintImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_imageView"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_textView"
        android:text="Leonardo Di Caprio"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorControlNormal"/>

</LinearLayout>